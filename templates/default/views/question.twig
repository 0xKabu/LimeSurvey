{{ dump(aSurveyInfo.aQuestion) }}
#}


{% set aShow     = aSurveyInfo.aShow %}
{% set aQuestion = aSurveyInfo.aQuestion %}

<!-- Question -->
<div id="question{{ aQuestion.qid }}" class=" {{ getAllQuestionClasses( aQuestion.qid ) }} {{ aQuestion.input_error_class }} question-container row">

    <!-- Question text -->
    <div class="question-title-container bg-primary col-xs-12">

        {{ include('./subviews/question/question_mandatory.twig') }}

        {% if (aShow.question_number) %}
            <span class='text-muted question-number'>
                {{ aQuestion.number }}
            </span>
        {% endif %}

        {% if (aShow.question_code) %}
            <span class='text-muted question-code'>
                {{ aQuestion.code }}
            </span>
        {% endif %}

        <div class="question-text">
            <div id="ls-question-text-{{ aQuestion.SGQ }}" class="ls-label-question">
                {{ aQuestion.text }}
            </div>
        </div>
    </div>

    <!-- LimeSurvey valid message and help -->
    <div class="question-valid-container bg-primary text-info col-xs-12">
        {{ aQuestion.valid_message | raw }}
        {{ aQuestion.man_message | raw }}      
      {QUESTION_FILE_VALID_MESSAGE}
    </div>

    <!-- Answer -->
    <div class="answer-container  col-xs-12">
        {ANSWER}
    </div>

    <!-- Survey question help -->
    <div class="question-help-container text-info col-xs-12">{QUESTIONHELP}</div>
</div>
